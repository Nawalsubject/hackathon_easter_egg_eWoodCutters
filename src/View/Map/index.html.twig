{{ cells[count].content_type_id == 5 ? 'map-superegg' }}

"><img src="{{ cells[count].content_type_id == 5 ? '/assets/images/easteregg2.png' }}">
   <img src="{{ cells[count].content_type_id == 3 ? '/assets/images/choco_tablet2.png' }}">
     <img src="{{ cells[count].content_type_id == 2 ? '/assets/images/lait2.png' }}">
       <img src="{{ cells[count].content_type_id == 4 ? '/assets/images/monster2.png' }}">
         <img src="{{ cells[count].content_type_id == 1 ? '/assets/images/normal_egg2.png' }}">
                                    </div>
                                </div>
                                {% set count = count + 1 %}
                            {% endfor %}
                        </div>
                    {% endfor %}
                </div>
                <!-- fin tableau -->
            </div>
        </div>
    </div>

{% endblock %}
